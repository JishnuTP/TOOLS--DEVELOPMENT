# Core Packages
npm install express              # Fast and minimalist web framework for Node.js
npm install dotenv               # Manage environment variables

# Database Interaction
npm install mongoose             # MongoDB ODM (Object Data Modeling) for schemas
npm install mongodb              # MongoDB driver for direct database interaction

# Authentication & Authorization
npm install jsonwebtoken         # Token-based authentication (JWT)
npm install bcryptjs             # Password hashing
# Alternative:
npm install argon2               # Modern password hashing

# Validation & Data Parsing
npm install joi                  # Data validation for schemas
npm install body-parser          # Middleware to parse request bodies (Optional with Express 4.16+)

# Security
npm install helmet               # Secure HTTP headers
npm install cors                 # Enable Cross-Origin Resource Sharing
npm install express-rate-limit   # Rate-limiting middleware to prevent abuse
npm install xss-clean            # Sanitize user inputs to prevent XSS attacks
npm install hpp                  # Prevent HTTP Parameter Pollution

# Performance
npm install compression          # Compress HTTP responses
npm install morgan               # HTTP request logging
npm install winston              # Logging library for production
# Alternative:
npm install pino                 # Fast logging library

# File Uploads
npm install multer               # Handle file uploads
npm install cloudinary           # Manage cloud-based storage (Optional)
# Alternative:
npm install aws-sdk              # AWS storage integration

# Real-Time Communication
npm install socket.io            # Enable real-time communication

# Testing
npm install jest                 # Testing framework for unit/integration tests
npm install supertest            # Test HTTP endpoints

# Task Scheduling
npm install node-schedule        # Schedule tasks and jobs

# Error Handling
npm install express-async-errors # Simplify async error handling in Express
npm install http-errors          # Create custom HTTP error objects

# Monitoring & Debugging
npm install pm2 -g               # Manage and monitor production Node.js apps
npm install nodemon -D           # Restart server automatically in development

# Optional Packages
npm install redis                # Caching and session management
npm install agenda               # Background job scheduling

# Deployment
npm install dotenv-expand        # Support expanded environment variables
npm install cross-env            # Set environment variables across platforms
